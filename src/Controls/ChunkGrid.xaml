<UserControl x:Class="DQBChunkEditor.Controls.ChunkGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DQBChunkEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="4*"/>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
      <Button Name="EditButton" Content="Edit" Click="Editing"/>
      <Button Name="CancelButton" Content="Exit without saving" Click="Cancel" Visibility="Collapsed" Margin="0,5,0,5"/>
      <Label Content="{Binding Path=ChunkCount.Value}"/>
      <Button Name="ImageButton" Content="Toggle Background Image" Click="Image" Margin="0,5,0,5"/>
    </StackPanel>
    <Viewbox Grid.Column="1" Stretch="Uniform" VerticalAlignment="Top">
      <Grid Name="ImMapGrid" Background="Transparent">
        <Image Name="ImageBackground" Source="{Binding LastBitmap.Value}"/>
        <UniformGrid Name="MapGrid" Columns="48" Rows="48" Background="Transparent">
        </UniformGrid>
      </Grid>
    </Viewbox>
  </Grid>
</UserControl>
