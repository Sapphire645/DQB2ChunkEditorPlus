<UserControl x:Class="DQBChunkEditor.Controls.LayerTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DQBChunkEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24"
             d:DesignWidth="24"
             SnapsToDevicePixels="True"
             RenderOptions.BitmapScalingMode="NearestNeighbor">
  <Grid Background="Transparent">
    <RadioButton Name="TileButton"
                 GroupName="Grid"
                 Height="24"
                 Width="24"
                 Background="Transparent"
                 Style="{StaticResource {x:Type ToggleButton}}"
                 ToolTip="{Binding Path=Tile.Value.TileData.Name, RelativeSource={RelativeSource AncestorType=UserControl}}" BorderThickness="0,0,0,0">
      <Image Source="{Binding Path=Tile.Value.TileData.ImagMap, RelativeSource={RelativeSource AncestorType=UserControl}}" IsHitTestVisible="False" />
    </RadioButton>
  </Grid>
</UserControl>
