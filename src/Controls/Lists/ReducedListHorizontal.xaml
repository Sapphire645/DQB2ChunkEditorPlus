<UserControl x:Class="DQBChunkEditor.Controls.ReducedListHorizontal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DQBChunkEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
  <Grid>
    <ScrollViewer Grid.Row="2" Name="ScrollView" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible">
            <StackPanel Background="#FFDFDFDF">
                <UniformGrid Name="Grid" Rows="1" HorizontalAlignment="Left" VerticalAlignment="Stretch"></UniformGrid>
            </StackPanel>
        </ScrollViewer>
    <Rectangle StrokeThickness="1" Stroke="#ACACAC"/>
  </Grid>
</UserControl>
